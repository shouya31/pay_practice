<%= form_with  url: payjp_index_path, id: 'charge-form', class: 'card-form',local: true do |f| %>

  <div class='form-wrap'>
    <label> 金額</label>
    <%= f.text_field 'price', class:"price", placeholder:"", maxlength:"16" %>
    
  </div>
  <div class='form-wrap'>
    <label> カード番号</label>
    <%= f.text_field 'number', class:"number", placeholder:"", maxlength:"16" %>
    
  </div>
  <div class='form-wrap'>
    <label> CVC</label>
    <%= f.text_field 'cvc', class:"cvc", placeholder:"", maxlength:"16" %>
    
  </div>
  <div class='form-wrap'>
    <label> 有効期限</label>
    <div class='input-expiration-date-wrap'>
      <%= f.text_area 'exp_month', class:"exp_month", placeholder:"例)3" %>
      
      <p>月</p>
      <%= f.text_area 'exp_year', class:"exp_month", placeholder:"例)3" %>
      
      <p>年</p>
    </div>
  </div>
  <%= f.submit "購入" ,class:"buy-red-btn" %>
  
<% end %>